<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <org.neshan.mapsdk.MapView
        android:id="@+id/neshan_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_detail_layout"
        android:background="@drawable/shape_white_cornered"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="30dp"
        sweet:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/package_action_button"
            android:background="@drawable/shape_cornered_rectangle_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            sweet:layout_constraintLeft_toLeftOf="parent"
            sweet:layout_constraintRight_toRightOf="parent"
            sweet:layout_constraintTop_toBottomOf="@+id/package_detail">
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بسته رو رسوندم"
                android:layout_marginStart="20dp"
                sweet:layout_constraintBottom_toBottomOf="@+id/order_deliver_icon"
                sweet:layout_constraintLeft_toLeftOf="parent"
                sweet:layout_constraintRight_toLeftOf="@+id/order_deliver_icon"
                sweet:layout_constraintTop_toTopOf="@+id/order_deliver_icon"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/order_deliver_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_delivery"
                android:layout_marginEnd="30dp"
                sweet:layout_constraintBottom_toBottomOf="parent"
                sweet:layout_constraintRight_toRightOf="parent"
                sweet:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/package_detail"
            android:layout_width="0dp"
            android:layout_height="100dp"
            sweet:layout_constraintBottom_toTopOf="@+id/package_action_button"
            sweet:layout_constraintLeft_toLeftOf="@+id/package_action_button"
            sweet:layout_constraintRight_toRightOf="@+id/package_action_button"
            sweet:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/black"
                android:id="@+id/package_detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="توضیحات"
                android:layout_marginEnd="10dp"
                sweet:layout_constraintRight_toRightOf="parent"
                sweet:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
